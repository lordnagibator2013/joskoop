<Window x:Class="lord13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lord13"
        mc:Ignorable="d"
        Title="Реперская" Height="450" Width="800">
    <Grid>
        <Canvas>
            <TextBlock x:Name="titleText" 
                Text="Дневник" 
                FontSize="18"
                Canvas.Left = "380"
                Canvas.Top = "10"/>
            <Button Content="Добавить задачу"
                Background="Green"
                Foreground="Yellow"
                Click="AddTask"
                Width="140" Height="80"
                Canvas.Left = "20"
                Canvas.Top = "10"/>
            <Button Content="Удалить задачу"
                Background="Red"
                Foreground="White"
                Click="RemoveTask"
                Width="140" Height="80"
                Canvas.Left = "20"
                Canvas.Top = "100"/>
            <Button Content="Изменить задачу"
                Background="#00FFFF"
                Foreground="Purple"
                Click="ChangeTask"
                Width="140" Height="80"
                Canvas.Left="20"
                Canvas.Top="190"/>
            <Button Content="Выход"
                Background="Black"
                Foreground="White"
                Click="Exit"
                Width="140" Height="100"
                Canvas.Left="20"
                Canvas.Top="290"/>
            <TextBlock Text="Введите текст:" FontSize="14"
                Canvas.Left = "200"
                Canvas.Top = "50"/>
            <TextBox x:Name="Textbox"
                Width="450" Height="20"
                Canvas.Left = "300"
                Canvas.Top = "50"
                FontSize="14"/>
            <ListBox x:Name="Listbox" 
                Width="550" Height="300"
                Canvas.Left = "200"
                Canvas.Top = "90"
                FontSize="14"
                Background="White"
                BorderThickness="1"
                BorderBrush="Gray"/>
        </Canvas>
    </Grid>
</Window>
